  <script>
    function showExtra(index) {
      const extraSection = document.getElementById(`extra-${index}`);
      if (extraSection) extraSection.classList.toggle("hidden");
    }

    async function toggleLike(evt, noteId) {
      evt.preventDefault();
      const btn = evt.currentTarget;
      const likeCountEl = document.getElementById(`like-count-${noteId}`);
      const csrfToken = document.querySelector('meta[name="csrf-token"]').getAttribute('content');

      try {
        const resp = await fetch("{{ url_for('like_note') }}", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            "X-CSRFToken": csrfToken,
            "X-CSRF-Token": csrfToken
          },
          body: JSON.stringify({ note_id: noteId })
        });

        const data = await resp.json();
        if (!resp.ok) {
          alert(data.error || "B≈ÇƒÖd podczas g≈Çosowania.");
          return;
        }

        likeCountEl.textContent = data.likes_count;
        if (data.action === "liked") {
          btn.classList.add("liked");
          btn.querySelector('.like-text').textContent = "Polubione";
        } else {
          btn.classList.remove("liked");
          btn.querySelector('.like-text').textContent = "Polub";
        }
      } catch (e) {
        console.error(e);
        alert("WystƒÖpi≈Ç b≈ÇƒÖd sieci. Spr√≥buj ponownie.");
      }
    }
  </script>
</body>

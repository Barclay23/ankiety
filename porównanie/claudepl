  <script>
    function showExtra(index) {
      const extraSection = document.getElementById(`extra-${index}`);
      if (extraSection) {
        extraSection.classList.toggle("hidden");
      }
    }
    
    async function toggleLike(noteId) {
      const likeBtn = document.getElementById(`like-btn-${noteId}`);
      const likeCount = document.getElementById(`like-count-${noteId}`);
      
      // Zablokuj przycisk podczas wykonywania ≈ºƒÖdania
      likeBtn.disabled = true;
      
      try {
        const response = await fetch(`/like/${noteId}`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          }
        });
        
        const data = await response.json();
        
        if (data.success) {
          // Zaktualizuj liczbƒô lajk√≥w
          likeCount.textContent = data.likes;
          
          // Prze≈ÇƒÖcz klasƒô "liked"
          if (data.action === 'liked') {
            likeBtn.classList.add('liked');
          } else {
            likeBtn.classList.remove('liked');
          }
        } else {
          alert(data.message || 'WystƒÖpi≈Ç b≈ÇƒÖd');
        }
      } catch (error) {
        console.error('B≈ÇƒÖd:', error);
        alert('WystƒÖpi≈Ç b≈ÇƒÖd podczas przetwarzania ≈ºƒÖdania');
      } finally {
        // Odblokuj przycisk
        likeBtn.disabled = false;
      }
    }
  </script>
</body>
